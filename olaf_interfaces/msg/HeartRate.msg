# Heart rate animation control for body display

uint8 rate_bpm        # Heart rate in beats per minute (30-180)
uint8 intensity       # Visual intensity: 1-5 (affects brightness/size)
uint8 color_r         # RGB color - Red component (0-255)
uint8 color_g         # RGB color - Green component (0-255)
uint8 color_b         # RGB color - Blue component (0-255)
